<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e0e0e0">

        <ImageView android:id="@+id/main_previewPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/main_previewName"
                android:text="@string/main_previewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp" />

            <TextView android:id="@+id/main_previewNumber"
                android:text="@string/main_previewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <TextView android:id="@+id/main_previewEmail"
                android:text="@string/main_previewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <ImageButton android:id="@+id/main_buttonCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@color/button_material_dark" />

            <ImageButton android:id="@+id/main_buttonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@color/button_material_dark" />

        </LinearLayout>

    </LinearLayout>

    <ExpandableListView android:id="@+id/main_contactsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="40dp"
        android:choiceMode="singleChoice">
    </ExpandableListView>

</LinearLayout>
